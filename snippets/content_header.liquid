<div class="sf-header desktop-only" :class="{ 'is-sticky': sticky, 'is-hidden': hidden }">
  <div class="sf-header__wrapper">
    <header ref="header" class="sf-header__header">
      <!-- Logo here -->
      <a href="{{ "/" | absolute_url }}" class="sf-link">
        <div class="sf-image sf-header__logo">
          <img src="https://virtocommerce.com/docs/latest/media/logo.png" alt="{{ "common.header.home" | t }}" />
        </div>
      </a>
      <div class="sf-header__aside">
        <!-- Language or currency selector here -->
      </div>
      <div class="sf-header__actions">
        <nav class="sf-header__navigation is-visible">
          <!-- Categories navigation -->
          {% include 'site-nav' %}
        </nav>
        <!-- Search bar here-->
        <div class="sf-header__icons">
          <!-- Cart button-->
          <div class="sf-button sf-button--pure sf-header__action">
            <span id="app-cart"></span>
          </div>
          <!-- Account button-->
          <div class="sf-button sf-button--pure sf-header__action">
            {% if customer.is_registered_user %}
              <a href="{{ 'account' | absolute_url }}">
                {% if customer.operator_user_id != null %}
                    {{ "common.header.logged_in.on_behalf" | t }}
                {% else %}
                    {{ "common.header.logged_in.as" | t }}
                {% endif %}
                {{ customer.user_name }}
              </a>
            {% else %}
              <a href="{{ 'account/login' | absolute_url }}" data-testid="accountIcon" class="sf-button sf-button--pure sf-header__action" style="outline: none;">
                <div class="sf-icon sf-header__icon is-active" style="--icon-size:1.25rem;">
                  <svg viewBox="0 0 24 24" preserveAspectRatio="none" class="sf-icon-path">
                    <path d="M20.667 21.024a.978.978 0 01-.977.976H4.977A.98.98 0 014 21.024c0-4.58 3.73-8.292 8.333-8.292s8.333 3.712 8.333 8.292zm-8.334-7.317c-4.06 0-7.352 3.276-7.352 7.317 0-.002 14.71 0 14.71 0-.005-4.041-3.296-7.317-7.358-7.317zm0-1.95c-2.707 0-4.901-2.185-4.901-4.879C7.432 4.184 9.626 2 12.333 2c2.708 0 4.902 2.184 4.902 4.878s-2.194 4.878-4.902 4.878zm0-.976c2.166 0 3.922-1.748 3.922-3.903 0-2.155-1.756-3.902-3.922-3.902-2.165 0-3.921 1.747-3.921 3.902 0 2.155 1.756 3.902 3.921 3.902z" fill="var(--icon-color)" style="height: 100%;"></path>
                  </svg>
                </div>
              </a>
            {% endif %}
          </div>
          <!-- Logout button-->
          {% if customer.is_registered_user %}
            <div class="sf-button sf-button--pure sf-header__action">
              <a href="{{ 'account/logout' | absolute_url }}">{{ "common.header.log_out" | t }}</a>
            </div>
          {% endif %}
        </div>
      </div>
    </header>
  </div>
</div>
