{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": false,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": "src",
    "types": [
      "chai-string",
      "chai",
      "mocha",
      "moment",
      "webpack-env",
      "webpack",
    ],
    "paths": {
      "@i18n": [ "i18n" ],
      "@core/*": [ "core/*" ],
      "@libs/*": [ "libs/*" ],
      "@components/*": [ "components/*" ],
      "@account/*": [ "pages/account/*" ],
      "@catalog/*": [ "pages/catalog/*" ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
