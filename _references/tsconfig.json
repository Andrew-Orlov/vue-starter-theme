{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": false,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "moment",
      "webpack-env",
      "webpack",
    ],
    "paths": {
      "@i18n": [
        "client-app/i18n"
      ],
      "@core/*": [
        "client-app/core/*"
      ],
      "@libs/*": [
        "client-app/libs/*"
      ],
      "@account/*": [
        "client-app/pages/account/*"
      ],
      "@catalog/*": [
        "client-app/pages/catalog/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "client-app/**/*.ts",
    "client-app/**/*.tsx",
    "client-app/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
